<h1>@<%= @user.username %>'s Profile & Tweets </h1>

<p><%= @user.name%></p>
<p><%= @user.bio%></p>

<p>
	<% if current_user.following.include?(@user.id)%>
		<%= link_to "Following", unfollow_path(id: @user.id), class: "btn btn-primary unfollow_btn" %>
	<% else %>
		<% if current_user.id != @user.id %>
		<%= link_to "Follow", now_following_path(id: @user.id), class: "btn btn-primary"%>
		<% end %>
	<% end %>
</p>

<p>
	<%= link_to "Followers", followers_path(id: @user.id) %><br/>
	<%= link_to "Following", following_path(id: @user.id) %><br/>
</p>

<%= @user.tweets.each do |tweet| %>
	<p>@<%=@user.username %> </p>
	<p><%= tweet.message %> </p>
	<% end %>